@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <body>
    <h1>List of Strings</h1>
    <form method="post">
        <label asp-for="Count"></label> <!-- Here we use asp-for -->
        <input asp-for="Count" /> <!-- And here too -->
        <button type="submit">Submit</button>
    </form>
    <p>@Model.Count</p>
    @foreach (var str in Model.PreparedItems)
    {
        <p>@str</p>
    }
    </body>
</div>
